<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Col02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Col04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Col06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Row01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Row03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Row05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.475" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Row07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Row09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.825" />

    <Button
        android:id="@+id/BtnNum7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Number7"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/Row05"
        app:layout_constraintEnd_toStartOf="@+id/Col02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row03" />

    <Button
        android:id="@+id/BtnNum8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Number8"
        android:textAlignment="center"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/Row05"
        app:layout_constraintEnd_toStartOf="@+id/Col04"
        app:layout_constraintStart_toStartOf="@+id/Col02"
        app:layout_constraintTop_toTopOf="@+id/Row03" />

    <Button
        android:id="@+id/BtnNum9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Number9"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/Row05"
        app:layout_constraintEnd_toStartOf="@+id/Col06"
        app:layout_constraintStart_toStartOf="@+id/Col04"
        app:layout_constraintTop_toTopOf="@+id/Row03" />

    <Button
        android:id="@+id/BtnCE"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_CE"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/Row07"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Col06"
        app:layout_constraintTop_toTopOf="@+id/Row03" />

    <Button
        android:id="@+id/BtnNum4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Number4"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/Row07"
        app:layout_constraintEnd_toStartOf="@+id/Col02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row05"
        app:layout_constraintVertical_bias="0.461" />

    <Button
        android:id="@+id/BtnNum5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Number5"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/Row07"
        app:layout_constraintEnd_toStartOf="@+id/Col04"
        app:layout_constraintStart_toStartOf="@+id/Col02"
        app:layout_constraintTop_toTopOf="@+id/Row05" />

    <Button
        android:id="@+id/BtnNum6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Number6"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/Row07"
        app:layout_constraintEnd_toStartOf="@+id/Col06"
        app:layout_constraintStart_toStartOf="@+id/Col04"
        app:layout_constraintTop_toTopOf="@+id/Row05" />

    <Button
        android:id="@+id/BtnNum1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Number1"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/Row09"
        app:layout_constraintEnd_toStartOf="@+id/Col02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row07" />

    <Button
        android:id="@+id/BtnNum2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Number2"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/Row09"
        app:layout_constraintEnd_toStartOf="@+id/Col04"
        app:layout_constraintStart_toStartOf="@+id/Col02"
        app:layout_constraintTop_toTopOf="@+id/Row07" />

    <Button
        android:id="@+id/BtnNum3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Number3"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/Row09"
        app:layout_constraintEnd_toStartOf="@+id/Col06"
        app:layout_constraintStart_toStartOf="@+id/Col04"
        app:layout_constraintTop_toTopOf="@+id/Row07" />

    <Button
        android:id="@+id/BtnNum0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Number0"
        android:textSize="75sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Col04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row09"
        app:layout_constraintVertical_bias="0.512" />

    <Button
        android:id="@+id/BtnComa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Coma"
        android:textSize="75sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Col06"
        app:layout_constraintStart_toStartOf="@+id/Col04"
        app:layout_constraintTop_toTopOf="@+id/Row09" />

    <Button
        android:id="@+id/BtnDEL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Delete"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Col06"
        app:layout_constraintTop_toTopOf="@+id/Row07"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/BtnCurrency"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="5dp"
        android:insetTop="5dp"
        android:insetRight="5dp"
        android:insetBottom="5dp"
        android:text="@string/_Currency"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/Row03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row01" />

    <TextView
        android:id="@+id/TVResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:text=""
        app:autoSizeMaxTextSize="125sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/Row01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>