<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Col01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Col03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Col05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Col07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Row02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Row04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4375" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Row06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.625" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Row08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8125" />

    <Button
        android:id="@+id/BtnNum7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Number7"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/Row04"
        app:layout_constraintEnd_toStartOf="@+id/Col01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row02" />

    <Button
        android:id="@+id/BtnNum8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Number8"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/Row04"
        app:layout_constraintEnd_toStartOf="@+id/Col03"
        app:layout_constraintStart_toStartOf="@+id/Col01"
        app:layout_constraintTop_toTopOf="@+id/Row02" />

    <Button
        android:id="@+id/BtnNum9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Number9"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/Row04"
        app:layout_constraintEnd_toStartOf="@+id/Col05"
        app:layout_constraintStart_toStartOf="@+id/Col03"
        app:layout_constraintTop_toTopOf="@+id/Row02" />

    <Button
        android:id="@+id/BtnCE"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_CE"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/Row06"
        app:layout_constraintEnd_toStartOf="@+id/Col07"
        app:layout_constraintStart_toStartOf="@+id/Col05"
        app:layout_constraintTop_toTopOf="@+id/Row02" />

    <Button
        android:id="@+id/BtnNum4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Number4"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/Row06"
        app:layout_constraintEnd_toStartOf="@+id/Col01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row04" />

    <Button
        android:id="@+id/BtnNum5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Number5"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/Row06"
        app:layout_constraintEnd_toStartOf="@+id/Col03"
        app:layout_constraintStart_toStartOf="@+id/Col01"
        app:layout_constraintTop_toTopOf="@+id/Row04" />

    <Button
        android:id="@+id/BtnNum6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Number6"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/Row06"
        app:layout_constraintEnd_toStartOf="@+id/Col05"
        app:layout_constraintStart_toStartOf="@+id/Col03"
        app:layout_constraintTop_toTopOf="@+id/Row04" />

    <Button
        android:id="@+id/BtnNum1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Number1"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/Row08"
        app:layout_constraintEnd_toStartOf="@+id/Col01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row06" />

    <Button
        android:id="@+id/BtnNum2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Number2"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/Row08"
        app:layout_constraintEnd_toStartOf="@+id/Col03"
        app:layout_constraintStart_toStartOf="@+id/Col01"
        app:layout_constraintTop_toTopOf="@+id/Row06" />

    <Button
        android:id="@+id/BtnNum3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Number3"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/Row08"
        app:layout_constraintEnd_toStartOf="@+id/Col05"
        app:layout_constraintStart_toStartOf="@+id/Col03"
        app:layout_constraintTop_toTopOf="@+id/Row06" />

    <Button
        android:id="@+id/BtnNum0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Number0"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Col03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row08" />

    <Button
        android:id="@+id/BtnComa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Coma"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Col05"
        app:layout_constraintStart_toStartOf="@+id/Col03"
        app:layout_constraintTop_toTopOf="@+id/Row08" />

    <Button
        android:id="@+id/BtnDEL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Delete"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Col07"
        app:layout_constraintStart_toStartOf="@+id/Col05"
        app:layout_constraintTop_toTopOf="@+id/Row06" />

    <Button
        android:id="@+id/BtnCurrency"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:text="@string/_Currency"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Col07"
        app:layout_constraintTop_toTopOf="@+id/Row02" />

    <TextView
        android:id="@+id/TVResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        app:autoSizeMaxTextSize="125sp"
        app:autoSizeMinTextSize="1sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/Row02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>