<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        style="@style/Column"
        android:id="@+id/Col01"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        style="@style/Column"
        android:id="@+id/Col03"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        style="@style/Column"
        android:id="@+id/Col05"
        app:layout_constraintGuide_percent="0.60" />

    <androidx.constraintlayout.widget.Guideline
        style="@style/Column"
        android:id="@+id/Col07"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        style="@style/Row"
        android:id="@+id/Row02"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        style="@style/Row"
        android:id="@+id/Row04"
        app:layout_constraintGuide_percent="0.4375" />

    <androidx.constraintlayout.widget.Guideline
        style="@style/Row"
        android:id="@+id/Row06"
        app:layout_constraintGuide_percent="0.625" />

    <androidx.constraintlayout.widget.Guideline
        style="@style/Row"
        android:id="@+id/Row08"
        app:layout_constraintGuide_percent="0.8125" />


    <Button
        style="@style/Button"
        android:id="@+id/ButtonNumber9"
        android:text="@string/Number9"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@+id/Row02"
        app:layout_constraintBottom_toTopOf="@+id/Row04"
        app:layout_constraintStart_toStartOf="@+id/Col03"
        app:layout_constraintEnd_toStartOf="@+id/Col05"
    />

    <Button
        style="@style/Button"
        android:id="@+id/ButtonNumber8"
        android:text="@string/Number8"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@+id/Row02"
        app:layout_constraintBottom_toTopOf="@+id/Row04"
        app:layout_constraintStart_toStartOf="@+id/Col01"
        app:layout_constraintEnd_toStartOf="@+id/Col03"
    />

    <Button
        style="@style/Button"
        android:id="@+id/ButtonNumber7"
        android:text="@string/Number7"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@+id/Row02"
        app:layout_constraintBottom_toTopOf="@+id/Row04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Col01"
    />

    <Button
        style="@style/Button"
        android:id="@+id/ButtonNumber6"
        android:text="@string/Number6"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@+id/Row04"
        app:layout_constraintBottom_toTopOf="@+id/Row06"
        app:layout_constraintStart_toStartOf="@+id/Col03"
        app:layout_constraintEnd_toStartOf="@+id/Col05"
    />

    <Button
        style="@style/Button"
        android:id="@+id/ButtonNumber5"
        android:text="@string/Number5"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@+id/Row04"
        app:layout_constraintBottom_toTopOf="@+id/Row06"
        app:layout_constraintStart_toStartOf="@+id/Col01"
        app:layout_constraintEnd_toStartOf="@+id/Col03"
    />


    <Button
        style="@style/Button"
        android:id="@+id/ButtonNumber4"
        android:text="@string/Number4"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/Row06"
        app:layout_constraintEnd_toStartOf="@+id/Col01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row04" />

    <Button
        style="@style/Button"
        android:id="@+id/ButtonNumber3"
        android:text="@string/Number3"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/Row08"
        app:layout_constraintEnd_toStartOf="@+id/Col05"
        app:layout_constraintStart_toStartOf="@+id/Col03"
        app:layout_constraintTop_toTopOf="@+id/Row06"
    />

    <Button
        style="@style/Button"
        android:id="@+id/ButtonNumber2"
        android:text="@string/Number2"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/Row08"
        app:layout_constraintEnd_toStartOf="@+id/Col03"
        app:layout_constraintStart_toStartOf="@+id/Col01"
        app:layout_constraintTop_toTopOf="@+id/Row06"
    />

    <Button
        style="@style/Button"
        android:id="@+id/ButtonNumber1"
        android:text="@string/Number1"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/Row08"
        app:layout_constraintEnd_toStartOf="@+id/Col01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row06"
    />

    <Button
        style="@style/Button"
        android:id="@+id/ButtonNumber0"
        android:text="@string/Number0"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Col03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Row08"
    />

    <Button
        style="@style/Button"
        android:id="@+id/BtnComa"
        android:text="@string/Coma"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Col05"
        app:layout_constraintStart_toStartOf="@+id/Col03"
        app:layout_constraintTop_toTopOf="@+id/Row08" />

    <Button
        style="@style/Button"
        android:id="@+id/ButtonDeleteLast"
        android:text="@string/Delete"
        app:autoSizeMaxTextSize="70sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Col07"
        app:layout_constraintStart_toStartOf="@+id/Col05"
        app:layout_constraintTop_toTopOf="@+id/Row06" />

    <Button
        style="@style/Button"
        android:id="@+id/ButtonCurrency"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Col07"
        app:layout_constraintTop_toTopOf="@+id/Row02" />

    <Button
        style="@style/ButtonCE"
        android:id="@+id/ButtonCE"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@+id/Row02"
        app:layout_constraintBottom_toTopOf="@+id/Row06"
        app:layout_constraintStart_toStartOf="@+id/Col05"
        app:layout_constraintEnd_toStartOf="@+id/Col07"
        />

    <TextView
        style="@style/TextView"
        android:id="@+id/TVResult"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/Row02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/last_names"
    />

</androidx.constraintlayout.widget.ConstraintLayout>