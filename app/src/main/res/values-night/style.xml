<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:textColor">@color/Linen</item>
        <item name="android:backgroundTint">@color/OxfordBlue</item>
    </style>
    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/Linen</item>
        <item name="android:background">@color/EerieBlack</item>
    </style>
</resources>